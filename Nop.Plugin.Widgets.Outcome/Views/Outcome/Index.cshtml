                                    </div>
                                </div>
                                <div class="conditional oneoff"
                                     style="display:@(Model.M14_SurveyType == Nop.Plugin.Widgets.Outcome.Models.SurveyType.OneOffSurvey ? "block" : "none")">
                                    <div class="inputs">
                                        <label asp-for="M14_OneOff_Improved6mCount"></label>
                                        <input asp-for="M14_OneOff_Improved6mCount" class="form-control" />
                                    </div>
                                </div>
                                <div class="conditional prepost"
                                     style="display:@((Model.M14_SurveyType == Nop.Plugin.Widgets.Outcome.Models.SurveyType.PreSurvey || Model.M14_SurveyType == Nop.Plugin.Widgets.Outcome.Models.SurveyType.PostSurvey) ? "block" : "none")">
                                    <div class="inputs">
                                        <label asp-for="M14_PrePost_AvgImprovement"></label>
                                        <input asp-for="M14_PrePost_AvgImprovement" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ===== M15 ===== -->
                        <div class="outcome-block @(Model.M15_Selected ? "" : "is-hidden")" data-block="M15">
                            <div class="outcome-header">
                                <label class="h3-check">
                                    <input type="checkbox" asp-for="M15_Selected" data-l2="M15" />
                                    @Nop.Plugin.Widgets.Outcome.Models.OutcomeModel.M15_Title
                                </label>
                            </div>
                            <div class="outcome-content" style="display:@(Model.M15_Selected ? "block" : "none")">
                                <div class="grid-2">
                                    <div class="inputs">
                                        <label asp-for="M15_ProgrammeCompletionsCount"></label>
                                        <input asp-for="M15_ProgrammeCompletionsCount" class="form-control" />
                                    </div>
                                    <div class="inputs">
                                        <label asp-for="M15_NoRelapse6mPct"></label>
                                        <input asp-for="M15_NoRelapse6mPct" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="buttons">
                <button type="submit" name="command" value="Save" class="button-1">
                    @(Model.Existing ? "Update outcome" : "Add outcome to the project")
                </button>
                <p class="back-link" style="margin-top:10px;">
                    <a href="/dashboard@(Model.ProjectId > 0 ? $"?projectId={Model.ProjectId}" : "")">← Back to dashboard</a>
                </p>
            </div>
        </form>
    </div>
</div>