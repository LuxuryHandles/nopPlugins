@model Nop.Plugin.BusinessServices.Models.BusinessTypeServiceMapModel
@using Nop.Web.Framework
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.PageTitle = "Map Services";
}
<form method="post" asp-area="@AreaNames.ADMIN" asp-controller="BusinessTypeServiceAdmin" asp-action="Map">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BusinessTypeId" />

    <div class="content-header clearfix">
        <h1 class="float-left">Map Services to <strong>@Model.BusinessTypeName</strong></h1>
        <div class="float-right">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-area="@AreaNames.ADMIN" asp-controller="BusinessTypeAdmin" asp-action="List" class="btn btn-secondary">Back</a>
        </div>
    </div>

    <div class="content">
        <div class="card">
            <div class="card-body">
                <label>Select services (Ctrl/Cmd + click to multi-select)</label>
                <select asp-for="SelectedServiceIds" asp-items="Model.AllServices" multiple size="20" class="form-control"></select>
            </div>
        </div>
    </div>
</form>
