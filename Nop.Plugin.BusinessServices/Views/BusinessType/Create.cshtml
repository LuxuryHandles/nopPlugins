@model Nop.Plugin.BusinessServices.Models.BusinessTypeModel
@using Nop.Web.Framework
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.PageTitle = "Create Business Type";
}
<form method="post" asp-area="@AreaNames.ADMIN" asp-controller="BusinessTypeAdmin" asp-action="Create">
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="float-left">Create Business Type</h1>
        <div class="float-right">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-area="@AreaNames.ADMIN" asp-controller="BusinessTypeAdmin" asp-action="List" class="btn btn-secondary">Back</a>
        </div>
    </div>
    <div class="content">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group form-check">
                    <input asp-for="Published" class="form-check-input" />
                    <label asp-for="Published" class="form-check-label"></label>
                </div>
            </div>
        </div>
    </div>
</form>
